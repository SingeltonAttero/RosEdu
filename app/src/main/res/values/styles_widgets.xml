<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">#f00</item>
        <item name="boxStrokeErrorColor">#f00</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="hintTextColor">@color/hint_text_input_layout</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="rippleColor">@color/white_dark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
</resources>